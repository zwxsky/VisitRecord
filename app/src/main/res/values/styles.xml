<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="label_container">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="label_title_small">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="label_content">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">#414141</item>
    </style>

    <style name="header_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="label_title_vertical_small">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="label_vertical_content">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#414141</item>
    </style>

</resources>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="demo.example.zwx.visitrecord.PreviewActivity">

    <TextView android:text="@string/lastRecord" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastRecord" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/record"
        android:id="@+id/record"
        android:layout_below="@+id/lastRecord"
        android:onClick="showLastRecord"/>

    <TextView android:text="@string/lastNeed" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNeed"
        android:layout_below="@+id/record"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/need"
        android:id="@+id/need"
        android:layout_below="@+id/lastNeed"
        android:onClick="showLastNeed"
        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/avatar"
        android:id="@+id/avatar"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/need"
        />

    <Button android:text="@string/sendNeed" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendNeed"
        android:layout_below="@+id/avatar"
        android:onClick="sendNeed"
        />

